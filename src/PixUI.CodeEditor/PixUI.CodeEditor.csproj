<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <LangVersion>10</LangVersion>
        <Configurations>Debug;Release;DebugWeb</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'DebugWeb' ">
      <DefineConstants>TRACE;__WEB__;</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\PixUI.Widgets\PixUI.Widgets.csproj" />
      <ProjectReference Include="..\PixUI\PixUI.csproj" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\CSharpHighlights.scm" />
      <EmbeddedResource Include="Resources\CSharpHighlights.scm" />
      <None Remove="Resources\CSharpLocals.scm" />
      <EmbeddedResource Include="Resources\CSharpLocals.scm" />
    </ItemGroup>

